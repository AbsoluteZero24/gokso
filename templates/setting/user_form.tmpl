{{ define "setting/user_form" }}
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">{{ .title }}</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/setting/user">User Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary card-outline shadow-sm">
                    <div class="card-header border-0 pb-0">
                        <h3 class="card-title fw-bold">
                            <i class="bi {{ if .admin }}bi-pencil-square{{ else }}bi-person-plus-fill{{ end }} me-2"></i>
                            {{ if .admin }}Edit{{ else }}Tambah{{ end }} Admin Account
                        </h3>
                    </div>
                    <form action="{{ if .admin }}/setting/user/update/{{ .admin.ID }}{{ else }}/setting/user/store{{ end }}" method="post">
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <label for="user_id" class="form-label fw-semibold">Pilih Karyawan</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i class="bi bi-people"></i></span>
                                    <select class="form-select" id="user_id" name="user_id" required>
                                        <option value="">-- Pilih Karyawan --</option>
                                        {{ range .employees }}
                                        <option value="{{ .ID }}" {{ if $.admin }}{{ if eq $.admin.UserID .ID }}selected{{ end }}{{ end }}>{{ .Name }} ({{ .NIK }})</option>
                                        {{ end }}
                                    </select>
                                </div>
                                <div class="form-text mt-2"><i class="bi bi-info-circle me-1"></i> Hubungkan akun login dengan data karyawan.</div>
                            </div>

                            <div class="mb-4">
                                <label for="username" class="form-label fw-semibold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i class="bi bi-person"></i></span>
                                    <input type="text" class="form-control" id="username" name="username" value="{{ if .admin }}{{ .admin.Username }}{{ end }}" placeholder="Masukkan username admin" required>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="role" class="form-label fw-semibold">Role Access</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i class="bi bi-shield-check"></i></span>
                                    <select class="form-select" id="role" name="role" required>
                                        <option value="super_admin" {{ if .admin }}{{ if eq .admin.Role "super_admin" }}selected{{ end }}{{ end }}>Super Admin (Akses Penuh)</option>
                                        <option value="asset_manager" {{ if .admin }}{{ if eq .admin.Role "asset_manager" }}selected{{ end }}{{ end }}>Asset Manager</option>
                                        <option value="staf_it" {{ if .admin }}{{ if eq .admin.Role "staf_it" }}selected{{ end }}{{ end }}>Staf IT (Asset & Maintenance)</option>
                                        <option value="support" {{ if .admin }}{{ if eq .admin.Role "support" }}selected{{ end }}{{ end }}>Support (Dashboard Only)</option>
                                    </select>
                                </div>
                                <div class="form-text mt-2"><i class="bi bi-info-circle me-1"></i> Tentukan level izin untuk akun ini.</div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">
                                    Password {{ if .admin }}<span class="badge bg-secondary-subtle text-secondary fw-normal">Optional</span>{{ end }}
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i class="bi bi-key"></i></span>
                                    <input type="password" class="form-control" id="password" name="password" {{ if not .admin }}required{{ end }} placeholder="{{ if .admin }}Kosongkan jika tidak ingin merubah{{ else }}Minimal 6 karakter{{ end }}">
                                </div>
                                {{ if .admin }}
                                <div class="form-text mt-2 text-warning"><i class="bi bi-exclamation-triangle me-1"></i> Biarkan kosong jika tidak ingin mengganti password saat ini.</div>
                                {{ end }}
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4-5 d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4 fw-semibold shadow-sm">
                                <i class="bi bi-save me-1"></i> Simpan
                            </button>
                            <a href="/setting/user" class="btn btn-outline-secondary px-4 fw-semibold">
                                Batal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const userIdSelect = document.getElementById('user_id');
    const usernameInput = document.getElementById('username');
    
    {{ if not .admin }}
    userIdSelect.addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        if (selectedOption.value) {
            // Get NIK or Name for default username
            const text = selectedOption.text;
            const nikMatch = text.match(/\((.*?)\)/);
            if (nikMatch && nikMatch[1]) {
                // If it looks like an email or has numbers (NIK), use it
                usernameInput.value = nikMatch[1].toLowerCase().replace(/\s+/g, '');
            } else {
                const name = text.split(' (')[0];
                usernameInput.value = name.toLowerCase().replace(/\s+/g, '.');
            }
        }
    });
    {{ end }}
});
</script>
{{ end }}
